<mvc:View controllerName="STARSchedule.STARSchedule.controller.View1" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="STAR Schedule">
				<content>
					<tnt:ToolHeader>
						<ToolbarSpacer/>
						<Text text="Welcome"/>
						<ToolbarSpacer/>
					</tnt:ToolHeader>
					
					<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Label text="Login using your credentials.."/>
								<Input id="username" placeholder="user name"/>
								<Input id="password" placeholder="password" type="Password"/>	
								<Button width="12rem" text="Login"  press="onLoggedIn"/>
						</items>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>